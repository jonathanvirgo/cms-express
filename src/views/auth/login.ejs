<%- include('../layouts/auth', { body: ` <div class="auth-card">
    <div class="auth-header">
        <h1 class="auth-title">Express CMS</h1>
        <p class="auth-subtitle">Sign in to your account</p>
    </div>

    ${typeof error !== 'undefined' && error ? `<div class="alert alert-error">${error}</div>` : ''}

    <form action="/auth/login" method="POST" class="auth-form">
        <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-input" placeholder="admin@example.com" required
                autofocus>
        </div>

        <div class="form-group">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-input" placeholder="••••••••" required>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
            Sign In
        </button>
    </form>

    <p class="auth-footer">Secure login with JWT authentication</p>
    </div>
    ` }) %>